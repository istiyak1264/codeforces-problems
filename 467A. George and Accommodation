#include<stdio.h>
int main()
{
    int i,n,count=0;
    scanf("%d",&n);

    int a[n],b[n];
    for(i=0; i<n; i++)
    {
        scanf("%d",&a[i]);
        scanf("%d",&b[i]);
    }

    for(i=0; i<n; i++)
    {
        if(b[i]-a[i]>=2)
        {
            count++;
        }
    }
    printf("%d",count);

    return 0;
}
