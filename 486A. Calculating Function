#include<stdio.h>
int main()
{
    long long int n,sum;//n refers to terms of the function.

    //taking input from the user.
    scanf("%lld",&n);

     /*if terms is even number sum of the function is (terms/2)
     and if the terms is odd number sum of the function is -(terms+1)/2.*/
    if(n%2==0)
    {
        sum = n/2;
        printf("%lld",sum);
    }
    else if(n%2==1)
    {
        sum = -(n+1)/2;
        printf("%lld",sum);
    }
    return 0;
}
