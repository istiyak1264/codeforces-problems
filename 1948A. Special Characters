#include <stdio.h>
int main()
{
    int t;
    scanf("%d", &t);
    while (t--)
    {
        int n;
        scanf("%d", &n);
        if (n % 2 != 0)
        {
            printf("NO\n");
        }
        else
        {
            printf("YES\n");

            for (int i = 0; i < n / 2; i++)
            {
                printf("%s", i % 2 == 0 ? "AA" : "BB");
                //i % 2 == 0 ? "AA" : "BB",it checks if i % 2 == 0 evaluates true.
                //If it does, it returns "AA", otherwise it returns "BB".
            }
            printf("\n");
        }
    }
    return 0;
}
